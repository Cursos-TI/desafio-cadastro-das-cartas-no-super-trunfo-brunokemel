{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar programa em C",
            "type": "shell",
            "command": "C:/msys64/mingw64/bin/gcc.exe",
            "args": [
                "-g",
                "-finput-charset=UTF-8",
                "-fexec-charset=UTF-8",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}